#!/usr/bin/env stest

#
# "~tests"
#
# using this tests will make your test php-incompatible
#
# this test will FAIL, this is intentional !!!
#

# instance-of
new DateTime;
    ~ DateTime;
new DateTime;
    ~ Directory;

# non-empty-string
"a"
    ~
new DateTime;
    ~
323
    ~
""
    ~

# match substring
"Cat jumped off the bed";
    ~ "off";
"Cat jumped off the bed";
    ~ "Dog";
# you can use php expressions inside a test
"Cat jumped off the bed";
    ~ "j".chr(117)."mped";

# require non empty result 
5-4
    ~~
5-5
    ~~

# in-array
[1,2,3,4,5];
    ~ [3];
[1,2,3,4,5];
    ~ ["a"];
# in-array - multiple values
[1,2,3,4,5];
    ~ [2,4];
# in-array - key => value pairs
$a = ['a' => 1, 'b' => 2];
    ~ ['a' => 1];
$a;
    ~ ['a' => 1, 'b' => 2];
$a;
    ~ ['a' => 2];
$a;
    ~ ['c' => 3];
# is array test
['a' => 1];
    ~ [];  # is-array test
"not-an-array"
    ~ [];  # shoud fail

# regexp
"Lorem ipSum dolor sit amet, consectetur adipiscing elit";
    ~ /..sum/i;

"Lorem ipSum dolor sit amet, consectetur adipiscing elit";
    ~ /XXX/;

"Lorem ipSum dolor sit amet, consectetur adipiscing ElIt";
    ~ /elit$/i;

